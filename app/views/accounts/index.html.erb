<div class="container pt-4 text-center">
  <h1><%= "You have #{pluralize(@accounts.count, "Account")} with Fin-Man:" %></h1><br>  
  <% if !@accounts.nil? && @accounts.count > 0 %>
    <%= link_to "Add a new account", new_account_path, class: "btn btn-primary" %>
  <% end %>
  <div class="d-flex justify-content-around flex-wrap">
    <% if !@accounts.nil? && @accounts.count > 0 %>
      <% @accounts.each do |account| %>
        <%= link_to account_path(account.id) do %>
          <div class="account-card">
            <div class="d-flex justify-content-center">
              <%= image_tag "icons/#{account.account_categories_icon}", class: "bank-icon mr-2" %>
              <h5 class="card-title">- <%= account.bank_name %></h5>
            </div>
            <p class="card-text">Balance: <%= currency_pretty(amount: account.balance, currency: account.currency)[:format] %></p>
            <p class="card-text">Account number: <%= account.account_number %></p>
            <p class="card-text">Sort code: <%= account.sort_code_pretty %></p>
          </div>
        <% end %>
      <% end %>
    <% else %>
      <div class="text-center">
        <%= link_to new_account_path do %>
          <lord-icon
            src="https://cdn.lordicon.com/mecwbjnp.json"
            trigger="hover"
            colors="primary:#FAEBD7,secondary:#FAEBD7"
            style="width:100px;height:100px">
          </lord-icon><h2>Add a new Account now to Start Tracking!!</h2>
        <% end %>
      </div>    
    <% end %>
  </div>
</div>
